# Environment Configuration Example
# Copy this file to .env and fill in the actual values for your environment

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/sanctra_social

# API Configuration
API_PORT=3000
API_HOST=localhost
NODE_ENV=development

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# Security
CORS_ORIGIN=http://localhost:3000
API_RATE_LIMIT=100

# External Services
# Add external service URLs and API keys here as needed

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
